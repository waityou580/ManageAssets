            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Currency)
        </td>
        <td>
            @{ 
                string payment_Status = "";
                int status = item.Status.Value;
                switch (status)
                {
                    case 1: payment_Status = "Draft";
                        break;
                    case 2:
                        payment_Status = "Approting";
                        break;
                    case 3:
                        payment_Status = "Paymenting";
                        break;
                    case 4:
                        payment_Status = "Paymented";
                        break;
                }
              }
              @Html.DisplayFor(modelItem => payment_Status)
            </td>


            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Payment_ID }) |
                @Html.ActionLink("Details", "Details", new { id=item.Payment_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Payment_ID })
            </td>


