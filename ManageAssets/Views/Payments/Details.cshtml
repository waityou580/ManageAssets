                @Html.DisplayFor(model => model.Payment_ID)
            </dd>

            <dt>
                @Html.DisplayName(Global.Payment_Date)
            </dt>
            <dd class="form-control">
                @Html.DisplayFor(model => model.Payment_Date)
            </dd>

            <dt>
                @Html.DisplayName(Global.username)
            </dt>
            <dd class="form-control">
                @Html.DisplayFor(model => model.Sys_Account.Username)
            </dd>

            <dt>
                @Html.DisplayName(Global.DEPT_ID)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.DEPARTMENT.DEPT_ID)
            </dd>

            <dt>
                @Html.DisplayName(Global.Supplier_ID)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.SUPPLIER.SUPPLIER_ID)
            </dd>

            <dt>
                @Html.DisplayName(Global.Invoice_Date)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.Invoice_Date)
            </dd>

            <dt>
                @Html.DisplayName(Global.Billing_period)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.Billing_period)
            </dd>

            <dt>
                @Html.DisplayName(Global.Payment_method)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.Payment_method)
            </dd>

            <dt>
                @Html.DisplayName(Global.Units_used)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.Units_used)
            </dd>

            <dt>
                @Html.DisplayName(Global.Title_VN)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.Title_VN)
            </dd>

            <dt>
                @Html.DisplayName(Global.Title_CN)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.Title_CN)
            </dd>

            <dt>
                @Html.DisplayName(Global.Content_VN)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.Content_VN)
            </dd>

            <dt>
                @Html.DisplayName(Global.Content_CN)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.Content_CN)
            </dd>

            <dt>
                @Html.DisplayName(Global.Price)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayName(Global.VAT)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.VAT)
            </dd>

            <dt>
                @Html.DisplayName(Global.Amount)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.Amount)
            </dd>

            <dt>
                @Html.DisplayName(Global.Currency)
            </dt>

            <dd class="form-control">
                @Html.DisplayFor(model => model.Currency)
            </dd>

            <dt>
                @Html.DisplayName(Global.Payment_Status)
            </dt>

            <dd class="form-control">
                @{
                    string payment_Status = "";
                    int status = item.Status.Value;
                    switch (status)
                    {
                        case 1:
                            payment_Status = "Draft";
                            break;
                        case 2:
                            payment_Status = "Approting";
                            break;
                        case 3:
                            payment_Status = "Paymenting";
                            break;
                        case 4:
                            payment_Status = "Paymented";
                            break;
                    }
                }
                @Html.DisplayFor(model => payment_Status)
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Payment_ID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</form>

