@model ManageAssets.Models.PAYMENT
@using ManageAssets.Resources

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<form>
    @Html.ActionLink("Report PDF", "ExportPdf",new { id = Model.Payment_ID}, new { @class = "btn btn-info" })
    @Html.ActionLink("Report Excel", "ExportExcel", new { id = Model.Payment_ID }, new { @class = "btn btn-info" })

    <br />
    <h1>Application for payment</h1>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>
