@model IEnumerable<ManageAssets.Models.Sys_Controller>
@using ManageAssets.Resources


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Reports_LayoutPage.cshtml";
}


<div class="x_panel">
    <div class="x_title">
        <h2>Controller Manager</h2>
        <br />
        <div class="clearfix"></div>
        @Html.ActionLink("Update Controller", "UpdateController", "Sys_Controller", new { @class = "btn btn-info" })
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                    <li>
                        <a href="#">Settings 1</a>
                    </li>
                    <li>
                        <a href="#">Settings 2</a>
                    </li>
                </ul>
            </li>
            <li>
                <a class="close-link"><i class="fa fa-close"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <p class="text-muted font-13 m-b-30">
            Responsive is an extension for DataTables that resolves that problem by optimising the table's layout for different screen sizes through the dynamic insertion and removal of columns from the table.
        </p>

        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName(Global.Controller_ID)
                    </th>
                    <th>
                        @Html.DisplayName(Global.Controller_Name_Vi)
                    </th>
                    <th>
                        @Html.DisplayName(Global.Controller_Name_En)
                    </th>
                    <th>
                        @Html.DisplayName(Global.Controller_Name_Cn)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Controller_ID, new { @id = "username" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Controller_Name_Vi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Controller_Name_En)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Controller_Name_Cn)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Controller_ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Controller_ID })
                            @*|@Html.ActionLink("Delete", "Delete", new { id = item.Controller_ID })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
